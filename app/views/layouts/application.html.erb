<!DOCTYPE html>
<html>
<head>
  <title>EventsApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div>
		<% if current_user %>
			<table>
				<tr>
				<td><%= current_user.email%>|</td>
				<td><%= link_to "Articles", articles_path%>|</td>
				<td><%= link_to "Events", events_path%>|</td>
				<td><%= link_to "Log out", logout_path%></td>
				</tr>
			</table>
		<% else %>
			<table>
				<tr>
				<td><%= link_to "SignUp", new_user_path %>|</td>
				<td><%= link_to "Login", login_path %></td>
				</tr>
			</table>
		<% end %>

	</div>

<%= yield %>

</body>
</html>
